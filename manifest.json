{
  "manifest_version": 2,
  "name": "EasySearch",
  "description": "A chrome extension that helps you find similar sites about the article you are reading.",
  "version": "1.0",
  "author": "Apurva Sharma",
  "icons": { 
        "16": "icons/icon.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png" 
  },
  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "tabs",
    "http://*/",
    "https://*/"
  ]
}

